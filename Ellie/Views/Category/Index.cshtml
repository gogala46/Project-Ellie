        position: relative;
    }

    nav ul li {
        list-style: none;
        width: 100%;
        height: 40px;
        display: flex;
        align-items: center;
    }

    body {
        padding: 0;
        margin: 0;
    }
</style>



<nav class="cont">
    <div class="content-div">
        <ul>

            @foreach (var i in getlist.categories)
