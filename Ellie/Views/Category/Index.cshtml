@model Ellie.Models.CategoriesModel
@{
    ViewData["Title"] = "Index";

    var getlist = ViewBag.list as Ellie.Models.CategoriesModel;

}

<style>
    * {
        box-sizing: border-box;
    }

    section {
        background: pink;
        height: 500px;
    }

    footer {
        background: blue;
        height: 80px;
    }

    nav ul {
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: space-between;
        width: 100%;
    }

    .cont {
        position: relative;
        width: 100%;
        background: red;
    }

    .test {
        background: green;
        position: absolute;
        left: 0;
        top: 100%;
        width: 100%;
        height: 400px;
        display: none;
        z-index: 10000;
    }

    .test2 {
        background: green;
        position: absolute;
        top: 0;
        left: 40%;
        width: 60%;
        height: 100%;
        display: none;
    }

    .content-div {
        width: 1200px;
        margin: auto;
        position: relative;
    }

    nav ul li {
        list-style: none;
        width: 100%;
        height: 40px;
        display: flex;
        align-items: center;
    }

    body {
        padding: 0;
        margin: 0;
    }
</style>

<nav class="cont">
    <div class="content-div">
        <ul>

            @foreach (var i in getlist.categories)
            {
                <li    onmouseover="getid(@i.Id)" onmouseout="normalImg()">
                    <a  asp-controller="Product" asp-action="Index" asp-route-id=>@i.Name</a>

                    <div class="test"></div>
                </li>
            }
            <li>
                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">ყველა</a>
            </li>
        </ul>
        <div class="test2"></div>

    </div>
</nav>



<script>
    $(document).ready(function () {

    });

    function normalImg() {
        console.log("close");
        $('.test').css('display', 'none');
    }
    function getid(id) {
        console.log(id);
        var url = "Category/PartialCat?Id=" + id;

        $.ajax({
            type: "GET",
            url: url,
            // multiple data sent using ajax
            success: function (html) {

                $(".test").html(html);
                $('.test').css('display', 'block')
            }
        });
    }


